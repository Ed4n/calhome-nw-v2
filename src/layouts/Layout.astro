---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CalHome Norwalk Landing Page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  .flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text-shadow {
    text-shadow: 3px 5px rgba(0, 0, 0, 0.219);
  }
</style>
