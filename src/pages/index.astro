---
import Layout from "../layouts/Layout.astro";

// Images //
import HomeBG from "../img/home/Home_BG.jpg";
import Logo from "../img/home/NW Logo.png";
import LanguageIcon from "../img/home/Language_Icon.png";

import HomeCardFTHB from "../components/home/HomeCardFTHB.astro";
import HomeCardOOR from "../components/home/HomeCardOOR.astro";
---

<Layout title="Home">
  <main class="flex-center w-full h-screen relative overflow-hidden">
    <img class="w-full h-full object-cover" src={HomeBG.src} alt="" />
    <!-- Content -->
    <div
      class="w-full h-full absolute flex justify-start items-center py-7 px-9 flex-col"
    >
      <img class="w-[300px]" src={Logo.src} alt="" />

      <a
        href="/es"
        class="py-2 px-5 text-white absolute left-7 top-7 bg-nw-red rounded-md shadow-md hover:scale-105 transition-all flex-center gap-3"
        ><img class="w-[20px]" src={LanguageIcon.src} alt="" />
        <span>Espa√±ol?</span></a
      >

      <div class="w-[80%] bottom-16 absolute flex-center gap-5 md:gap-12">
        <HomeCardFTHB />
        <HomeCardOOR />
      </div>
    </div>
  </main>
</Layout>
