---
import Buyer from "../components/fthb/Buyer.astro";
import PropertyGuidelines from "../components/fthb/PropertyGuidelines.astro";
import BgImg from "../img/fthb/FTHB_BG.jpg";
import NWLogo from "../img/home/NW Logo.png";
import Logo from "../img/Logo.webp";
import Layout from "../layouts/Layout.astro";
---

<Layout title="fthb">
  <main class="text-nw-blue">
    <header class="w-full h-screen flex justify-center bg-nw-blue">
      <div
        class="w-[93%] h-[80%] lg:h-[95%] rounded-b-3xl overflow-hidden relative flex-center"
      >
        <img src={BgImg.src} class="w-full h-full object-cover" alt="" />
        <div class="w-full h-full absolute">
          <h1 class="text-7xl flex flex-col font-bold text-white">
            <span class="text-nw-blue text-8xl">FIRST-TIME</span>HOMEBUYER <br
            /> PROGRAM
          </h1>
          <!-- Logos -->
          <div class="right-5 top-5 absolute flex gap-5">
            <img class="w-[125px]" src={Logo.src} alt="" />
            <img class="w-[145px]" src={NWLogo.src} alt="" />
          </div>
        </div>
      </div>
    </header>
    <Buyer />
    <PropertyGuidelines />

    <style></style>
  </main>
</Layout>
